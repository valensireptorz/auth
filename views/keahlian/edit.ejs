<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tambah Keahlian</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <h2>Tambah Keahlian</h2>
        <form action="/keahlian/update/<%= id %>" method="POST">
            <div class="mb-3">
                <label for="nama_keahlian" class="form-label">Nama Keahlian</label>
                <input type="text" class="form-control" value="<%= nama_keahlian %>" name="nama_keahlian" required>
            </div>
            <div class="mb-3">
                <label for="tingkat_keahlian" class="form-label">Tingkat Keahlian</label>
                <select class="form-select" name="tingkat_keahlian" value="<%= tingkat_keahlian %>" required>
                    <option value="1">Tingkat 1</option>
                    <option value="2">Tingkat 2</option>
                    <option value="3">Tingkat 3</option>
                    <option value="4">Tingkat 4</option>
                    <option value="5">Tingkat 5</option>
                </select>
            </div>

          
            <div class="mb-3">
                <label for="id_mahasiswa" class="form-label">Mahasiswa</label>
                <select class="form-select" name="id_mahasiswa" required>
                    <% mahasiswa.forEach(function(mahasiswa) { %>
                    <option value="<%= mahasiswa.id_mahasiswa %>"><%= mahasiswa.nama_depan %>
                        <%= mahasiswa.nama_belakang %>
                    </option>
                    <% }) %>
                </select>



            <button type="submit" class="btn btn-primary">Simpan</button>
        </form>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
</body>

</html>