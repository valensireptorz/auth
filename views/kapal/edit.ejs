<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Kapal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <h2>Edit Kapal</h2>
        <form action="/kapal/update/<%= id %>" method="POST">
            <div class="mb-3">
                <label for="nama_kapal" class="form-label">Nama Kapal</label>
                <input type="text" class="form-control" name="nama_kapal" value="<%= nama_kapal %>" required>
            </div>
            <div class="mb-3">
                <label for="id_pemilik" class="form-label">Pemilik</label>
                <select class="form-select" name="id_pemilik" required>
                    <% pemilik.forEach(function(pemilik) { %>
                    <option value="<%= pemilik.id_pemilik %>"><%= pemilik.nama_pemilik %></option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="id_dpi" class="form-label">DPI</label>
                <select class="form-select" name="id_dpi" required>
                    <% dpi.forEach(function(dpi) { %>
                    <option value="<%= dpi.id_dpi %>"><%= dpi.nama_dpi %></option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="id_alat_tangkap" class="form-label">Alat Tangkap</label>
                <select class="form-select" name="id_alat_tangkap" required>
                    <% alatTangkap.forEach(function(alat) { %>
                    <option value="<%= alat.id_alat_tangkap %>"><%= alat.nama_alat_tangkap %></option>
                    <% }) %>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Simpan</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
</body>

</html>
